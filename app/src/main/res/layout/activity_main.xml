<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/kereta"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name:"/>
            <EditText
                android:layout_width="185dp"
                android:layout_height="40dp"
                android:hint="First name"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name:"/>
            <EditText
                android:layout_width="185dp"
                android:layout_height="40dp"
                android:hint="Last name"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layanan Kereta Api:"/>

        <Spinner
            android:id="@+id/spinLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penumpang:"/>

        <Spinner
            android:id="@+id/spinPenumpang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


<!--    kereta -->

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dari:"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/spinnerImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/train"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Spinner
                    android:id="@+id/spinnerAsal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/spinnerImage"
                    android:layout_toEndOf="@+id/spinnerImage"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ke :"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/ImageSpinner"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/train"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <Spinner
                    android:id="@+id/spinnerTujuan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/ImageSpinner"
                    android:layout_toEndOf="@+id/ImageSpinner"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal :"/>


            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waktu : "/>

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:timePickerMode="spinner" />
        </LinearLayout>

    </LinearLayout>
        <Button
            android:id="@+id/PESAN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/biru"
            android:text="S I M P A N"/>







</LinearLayout>






